{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": false,
    "declaration": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*.__macro__.ts"
  ]
}
